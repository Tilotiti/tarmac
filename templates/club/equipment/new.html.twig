{% extends 'club/base.html.twig' %}

{% block page_title %}Ajouter un équipement
{% endblock %}

{% block page_content %}
	<div class="row justify-content-center">
		<div class="col-12 col-md-8 col-lg-6">
			<div class="card">
				<div class="card-header">
					<h3 class="card-title">Nouvel équipement</h3>
				</div>
				<div class="card-body">
					{{ form_start(form) }}
					<div class="mb-3">
						{{ form_label(form.name) }}
						{{ form_widget(form.name) }}
						{{ form_errors(form.name) }}
					</div>

					<div class="mb-3">
						{{ form_label(form.type) }}
						{{ form_widget(form.type) }}
						{{ form_errors(form.type) }}
					</div>

					<div class="mb-3">
						<div class="form-check form-switch">
							{{ form_widget(form.active) }}
							{{ form_label(form.active) }}
						</div>
						{{ form_errors(form.active) }}
						<small class="form-hint">
							Un équipement inactif n'apparaîtra pas dans la liste pour les membres
						</small>
					</div>

					<div>
						<button type="submit" class="btn btn-primary" style="min-height: 44px;">
							<i class="ti ti-check me-2"></i>
							Créer
						</button>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
