{% extends 'club/base.html.twig' %}

{% block page_title %}
	{{ 'createPurchase'|trans }}
{% endblock %}

{% block page_content %}
	<div class="card">
		<div class="card-body">
			{{ form_start(form) }}
			{{ form_row(form.name) }}
			{{ form_row(form.quantity) }}
			{{ form_row(form.description) }}
			{{ form_row(form.requestImage) }}

			<div class="form-footer">
				<button type="submit" class="btn btn-primary" style="min-height: 44px;">
					<i class="ti ti-check me-2"></i>
					{{ 'create'|trans }}
				</button>
				<a href="{{ path('club_purchases') }}" class="btn btn-secondary" style="min-height: 44px;">
					{{ 'cancel'|trans }}
				</a>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
