{% extends 'club/base.html.twig' %}

{% block page_title %}
	{{ 'dashboard'|trans }}
{% endblock %}

{% block page_content %}
	{# Welcome Message #}
	{% if club.welcomeMessage %}
		<div class="mb-4">
			<div class="card bg-primary-lt">
				<div class="card-body">
					<div class="d-flex align-items-start">
						<div class="flex-fill">
							<div class="text-body">
								{{ club.welcomeMessage|nl2br }}
							</div>
						</div>
						{% if is_granted('MANAGE') %}
							<a href="{{ path('club_dashboard_edit_welcome_message') }}" class="btn btn-sm btn-outline-primary ms-3">
								<i class="ti ti-edit me-1"></i>
								{{ 'edit'|trans }}
							</a>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	{% elseif is_granted('MANAGE') %}
		<div class="mb-4">
			<div class="card bg-secondary-lt">
				<div class="card-body">
					<div class="d-flex align-items-center justify-content-between">
						<div>
							<div class="text-body">
								{{ 'noWelcomeMessage'|trans }}
							</div>
						</div>
						<a href="{{ path('club_dashboard_edit_welcome_message') }}" class="btn btn-sm btn-primary">
							<i class="ti ti-plus me-1"></i>
							{{ 'addWelcomeMessage'|trans }}
						</a>
					</div>
				</div>
			</div>
		</div>
	{% endif %}

	{# SubTasks Awaiting Inspection (Inspector View) #}
	{% if is_granted('INSPECT') and awaitingInspectionSubTasks is not empty %}
		<div class="mb-4">
			<div class="d-flex align-items-center justify-content-between mb-3">
				<h3 class="mb-0">
					<i class="ti ti-shield-check"></i>
					{{ 'subTasksToValidate'|trans }}
					<span class="badge bg-secondary-lt ms-2">{{ awaitingInspectionCount }}</span>
				</h3>
				{% if awaitingInspectionCount > 5 %}
					<a href="{{ path('club_tasks', {'awaitingInspection': '1'}) }}" class="btn btn-sm btn-outline-warning">
						{{ 'seeAll'|trans }}
						<i class="ti ti-arrow-right ms-1"></i>
					</a>
				{% endif %}
			</div>
			<div class="row">
				{% for subTask in awaitingInspectionSubTasks %}
					{% include 'component/subTaskCard.html.twig' with {'subTask': subTask} %}
				{% endfor %}
			</div>
		</div>
	{% endif %}

	{# Priority Tasks #}
	{% if priorityTasks is not empty %}
		<div class="mb-4">
			<div class="d-flex align-items-center justify-content-between mb-3">
				<h3 class="mb-0">
					<i class="ti ti-flag"></i>
					{{ 'priorityTasks'|trans }}
					<span class="badge bg-secondary-lt ms-2">{{ priorityTasksCount }}</span>
				</h3>
				<div class="d-flex gap-2">
					{% if is_granted('MANAGE') %}
						<a href="{{ path('club_dashboard_print_priority_subtasks') }}" class="btn btn-sm btn-outline-primary" target="_blank">
							<i class="ti ti-printer me-1"></i>
							{{ 'printPrioritySubTasks'|trans }}
						</a>
					{% endif %}
					{% if priorityTasksCount > 20 %}
						<a href="{{ path('club_tasks') }}" class="btn btn-sm btn-outline-primary">
							{{ 'seeAll'|trans }}
							<i class="ti ti-arrow-right ms-1"></i>
						</a>
					{% endif %}
				</div>
			</div>
			<div class="row">
				{% for task in priorityTasks %}
					{% include 'component/taskCard.html.twig' with {'task': task} %}
				{% endfor %}
			</div>
		</div>
	{% endif %}

	{# Legacy code kept for reference - Pending Maintenance Plan Applications #}
	{% if false and pendingApplications is not empty %}
		<div class="mb-4">
			<div class="d-flex align-items-center justify-content-between mb-3">
				<h3 class="mb-0">
					<i class="ti ti-file-check"></i>
					{{ 'pendingPlans'|trans }}
					<span class="badge bg-secondary-lt ms-2">{{ pendingApplicationsCount }}</span>
				</h3>
				{% if pendingApplicationsCount > 5 %}
					{# Link to tasks page filtered by open status #}
					<a href="{{ path('club_tasks', {'status': 'open'}) }}" class="btn btn-sm btn-outline-primary">
						{{ 'seeAll'|trans }}
						<i class="ti ti-arrow-right ms-1"></i>
					</a>
				{% endif %}
			</div>
			<div class="row row-cards">
				{% for item in pendingApplications %}
					{% set application = item.application %}
					{% set tasks = item.tasks %}
					{% set totalTasks = application.tasks|length %}
					{% set closedTasks = 0 %}
					{% for task in application.tasks %}
						{% if task.status == 'closed' %}
							{% set closedTasks = closedTasks + 1 %}
						{% endif %}
					{% endfor %}
					{% set progress = totalTasks > 0 ? (closedTasks / totalTasks * 100)|round : 0 %}

					<div class="col-12">
						<a href="{{ path('club_equipment_show', {id: application.equipment.id}) }}" class="text-decoration-none">
							<div class="card card-link" style="cursor: pointer;">
								<div
									class="card-body">
									{# Header with equipment avatar and plan name #}
									<div
										class="d-flex align-items-start mb-3">
										{# Avatar with icon based on type #}
										<span class="avatar avatar-lg me-3 bg-{{ application.equipment.type.color }}-lt">
											<i class="ti {{ application.equipment.type.icon }} text-{{ application.equipment.type.color }}" style="font-size: 1.5rem;"></i>
										</span>
										<div
											class="flex-fill">
											{# Title: Equipment name #}
											<h4 class="card-title mb-1">{{ application.equipment.name }}</h4>
											{# Subtitle: Plan name #}
											<div class="text-secondary">{{ application.plan.name }}</div>
										</div>
										{# Badges on the right #}
										<div class="d-flex align-items-start flex-wrap gap-2 ms-2">
											{% if application.dueAt %}
												<span class="badge bg-azure-lt">
													<i class="ti ti-calendar me-1"></i>
													{{ application.dueAt|date('d/m/Y') }}
												</span>
											{% endif %}
											{# Owner badge #}
											{% if application.equipment.isPrivate %}
												<span class="badge bg-orange-lt">
													<i class="ti ti-user me-1"></i>
													{{ 'private'|trans }}
												</span>
											{% else %}
												<span class="badge bg-blue-lt">
													<i class="ti ti-building me-1"></i>
													{{ 'club'|trans }}
												</span>
											{% endif %}
											<span class="badge bg-{{ application.equipment.type.color }}-lt">
												<i class="ti {{ application.equipment.type.icon }} me-1"></i>
												{{ application.equipment.type.label|trans }}
											</span>
										</div>
									</div>

									{# Progress bar #}
									<div>
										<div class="d-flex align-items-center justify-content-between mb-2">
											<span class="text-secondary">{{ 'progress'|trans }}</span>
											<span>
												<strong>{{ closedTasks }}</strong>
												<span class="text-secondary">/</span>
												<span class="text-secondary">{{ totalTasks }}</span>
												<span class="text-secondary ms-2">({{ progress|number_format(0) }}%)</span>
											</span>
										</div>
										<div class="progress" style="height: 0.5rem;">
											<div class="progress-bar bg-primary" style="width: {{ progress }}%" role="progressbar" aria-valuenow="{{ progress }}" aria-valuemin="0" aria-valuemax="100"></div>
										</div>
									</div>
								</div>
							</div>
						</a>
					</div>
				{% endfor %}
			</div>
		</div>
	{% endif %}

	{# Legacy code kept for reference - Standalone Pending Tasks #}
	{% if false and standaloneTasks is not empty %}
		<div class="mb-4">
			<div class="d-flex align-items-center justify-content-between mb-3">
				<h3 class="mb-0">
					<i class="ti ti-checklist"></i>
					{{ 'pendingTasks'|trans }}
					<span class="badge bg-secondary-lt ms-2">{{ standaloneTasksCount }}</span>
				</h3>
				{% if standaloneTasksCount > 5 %}
					<a href="{{ path('club_tasks', {'status': 'open'}) }}" class="btn btn-sm btn-outline-info">
						{{ 'seeAll'|trans }}
						<i class="ti ti-arrow-right ms-1"></i>
					</a>
				{% endif %}
			</div>
			<div class="row">
				{% for task in standaloneTasks %}
					{% include 'component/taskCard.html.twig' with {'task': task} %}
				{% endfor %}
			</div>
		</div>
	{% endif %}

	{# Purchases Waiting for Delivery #}
	{% if purchasesWaitingDelivery is not empty %}
		<div class="mb-4">
			<div class="d-flex align-items-center justify-content-between mb-3">
				<h3 class="mb-0">
					<i class="ti ti-truck"></i>
					{{ 'purchasesWaitingDelivery'|trans }}
					<span class="badge bg-secondary-lt ms-2">{{ purchasesWaitingDeliveryCount }}</span>
				</h3>
				{% if purchasesWaitingDeliveryCount > 5 %}
					<a href="{{ path('club_purchases', {'status': 'purchased'}) }}" class="btn btn-sm btn-outline-info">
						{{ 'seeAll'|trans }}
						<i class="ti ti-arrow-right ms-1"></i>
					</a>
				{% endif %}
			</div>
			<div class="row">
				{% for purchase in purchasesWaitingDelivery %}
					<div class="col-12 col-md-6 col-lg-4 mb-3">
						<div class="card">
							<div class="card-body">
								<h4 class="card-title mb-2">
									<a href="{{ path('club_purchase_show', {id: purchase.id}) }}" class="text-reset">
										{{ purchase.name }}
									</a>
								</h4>
								<div class="text-secondary small">
									{{ 'purchaseQuantity'|trans }}:
									{{ purchase.quantity }}
								</div>
								{% if purchase.purchasedBy %}
									<div class="text-secondary small mt-1">
										{{ 'purchasedBy'|trans }}:
										{{ purchase.purchasedBy.fullName ?? purchase.purchasedBy.email }}
										<br>
										{{ purchase.purchasedAt|date('d/m/Y') }}
									</div>
								{% endif %}
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	{% endif %}

	{# Empty state #}
	{% if priorityTasks is empty and purchasesWaitingDelivery is empty and (not is_granted('INSPECT') or awaitingInspectionSubTasks is empty) %}
		<div class="empty">
			<div class="empty-icon">
				<i class="ti ti-clipboard-check"></i>
			</div>
			<p class="empty-title">{{ 'noPendingTasks'|trans }}</p>
			<p class="empty-subtitle text-secondary">
				{{ 'noPendingTasksDescription'|trans }}
			</p>
			<div class="empty-action">
				<a href="{{ path('club_task_new') }}" class="btn btn-primary">
					<i class="ti ti-plus"></i>
					{{ 'newTask'|trans }}
				</a>
			</div>
		</div>
	{% endif %}
{% endblock %}
