{% extends 'app/base.html.twig' %}

{% block page_title %}Modifier
	{{ club.name }}
{% endblock %}

{% block page_content %}
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">Informations du club</h3>
		</div>
		<div class="card-body">
			{{ form_start(form) }}
			{{ form_row(form.name) }}
			{{ form_row(form.subdomain) }}
			{{ form_row(form.active) }}

			<div class="d-flex gap-2 mt-3">
				<button type="submit" class="btn btn-primary" style="min-height: 44px;">
					<i class="ti ti-device-floppy me-2"></i>
					Enregistrer
				</button>
				<a href="{{ path('app_club_show', {id: club.id}) }}" class="btn btn-outline-secondary" style="min-height: 44px;">
					Annuler
				</a>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
